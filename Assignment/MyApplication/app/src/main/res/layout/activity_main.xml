<?xml version="1.0" encoding="utf-8"?>
<!-- design file for the main menu-->
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay">


        <android.support.v7.widget.Toolbar android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <!--create christmas background-->
    <LinearLayout android:id="@+id/LinearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/green">
    </LinearLayout>

    <!--move buttons to center wihtout need for padding-->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        >
        <!--create list button design-->
        <Button
            android:id="@+id/btn1"
            android:text="View List"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_width="230dp"
            android:layout_height="90dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:background="@drawable/round_button">
        </Button>
        <!--create button for pics-->
        <Button
            android:id="@+id/btn2"
            android:text="Browse pictures"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_width="230dp"
            android:layout_height="90dp"
            android:gravity="center"
            android:background="@drawable/round_button">
        </Button>
        <!--create design for button to link to google-->
        <Button
            android:id="@+id/btn3"
            android:text="Browse for gifts"
            android:layout_marginTop="10dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_width="230dp"
            android:layout_height="90dp"
            android:gravity="center"
            android:background="@drawable/round_button">
        </Button>
    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
